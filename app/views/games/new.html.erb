<h2>New game</h2>
<ul>
  <% @letters.each do |letter| %>
    <li> <%= letter %> </li>
  <% end %>
</ul>
<form action="score" method="post">
  <label for="field">"What is the longest word you can find ?</label>
  <br/>
  <input type="text"
         name="word"
         value="<% params[:word] %>"
         placeholder="Your longest word..."
         id="field">
  <input type="submit" value="Play !">
</form>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
